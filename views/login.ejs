<%- include('header'); -%>

<section id='title'>
    <div>
        <span class="titleContainer"><span class="titleFirst">F</span><span class="titleChild">ood</span></span><span
            class="titleFirst">T</span><span class="titleChild">rack</span>
    </div>
</section>

<section id='loginWrapper' class='wrapper'>
    <div class="loginItem in">Log in with</div>
    <a href="/auth/facebook" class="loginItem facebook"><i class="fab fa-facebook-square"></i> Facebook</a>
    <a href="/auth/twitter" class="loginItem twitter"><i class="fab fa-twitter-square"></i> Twitter</a>
    <a href="/auth/google" class="loginItem google"><i class="fab fa-google-plus-square"></i> Google</a>
    <div class="loginForm">
        <div>
            <%= message %>
        </div>
        <form action="/login" method="post">
            <input type="text" name="username" placeholder="Username" class="loginItem loginInput">
            <input type="password" name="password" placeholder="Password" class="loginItem loginInput">
            <button type="submit" class="loginItem login" value="Log in">Login <i
                    class="fas fa-sign-in-alt"></i></button>
        </form>
    </div>
    <a href="/register" class="button loginItem signUp">Register <i class="fas fa-address-card"></i></a>

</section>

<%- include('footer'); -%>