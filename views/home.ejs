<%- include('header'); -%>

<section id='title'>
    <div>
        <span class="titleContainer"><span class="titleFirst">F</span><span class="titleChild">ood</span></span><span
            class="titleFirst">T</span><span class="titleChild">rack</span>
    </div>
</section>
<section id='homeWrapper' class='wrapper' style="color:#43414B">
    <p class="center">List of food that you ate within 2 days</p>
    <% item.forEach(element => { %>
    <form action="/" method="post">
        <div class='itemContainer'>
            <div class='left'>
                <input type="checkbox" class="checkboxItem hide" name="removeItem" value="<%=element.food_name%>">
                <span><%=element.food_name%></span>
            </div>
            <div class="right">
                <% if (element.hour === 0) { %>
                <span class='left'>12 am</span>
                <% } else if (element.hour < 12){ %>
                <span class='left'><%=element.hour%> am</span>
                <% } else { %>
                <span class='left'><%=element.hour - 12%> pm</span>
                <% } %>
                <span class="right"><%=element.day%></span>
            </div>
        </div>
        <% }); %>
        <% if (item.length === 0) { %>
        <form action="/" method="post">
            <% } %>
            <div class='itemInputContainer'>
                <input id="dateHour" type="" name='hour' style="display: none;">
                <input id="dateDay" type="" name='day' style="display: none;">
                <input class="" type="text" name="newItem" id='itemInput' placeholder="Food name"
                    autofocus autocomplete="off">
            </div>
            <div class='center padding'>
                <button type="submit" id='add' name='operation' value="true"><i class="fas fa-plus-circle"></i></button>
                <button type="submit" id='remove' name='operation' class="hide" value="false"><i
                        class="fas fa-minus-circle"></i></button>
            </div>
        </form>
        <!-- <form action="/react" method="post">
            <input value='<%=item%>' name='items'>
            <button type="submit">React</button>
        </form> -->
</section>
<div id="logout">

    <a href="/logout">
        <div>logout</div>
    </a>

</div>

<script>
    let date = new Date();
    let days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    document.getElementById('dateHour').value = date.getHours();
    document.getElementById('dateDay').value = days[date.getDay()];
</script>
<script src="/scripts/script.js"></script>
<%- include('footer'); -%>